{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "preserve",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "~lib/*": ["src/lib/*"],
      "~demos/*": ["src/components/Demos/*"],
      "~components/*": ["src/components/*"],
      "~styles/*": ["src/styles/*"],
      "~/*": ["src/*"]
    }
  },
  "exclude": ["node_modules", "dist", "public"]
}