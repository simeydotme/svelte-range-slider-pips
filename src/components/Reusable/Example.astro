---
interface Props {
  name: string;
  description: string;
  link: string;
}

const { name, link, description } = Astro.props;
---

<li class="example">
  <a href={link}>
    <h3>{name}</h3>
    <p>{description}</p>
    <slot />
  </a>
</li>

<style>
  .example {
    box-sizing: border-box;
    margin: 0;
  }

  .example a {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    text-decoration: none;
    width: 100%;
    height: 100%;
    padding: 1rem;
    border-radius: 1em;
    transition: all 0.2s ease-out;
  }

  .example a:hover {
    background: #f2f2f2;
    transition-duration: 0.1s;
  }

  .example h3 {
    margin: 0;
    padding: 0;
    font-size: 1.5rem;
    line-height: 1.2;
    text-align: left;
  }
</style>
