---

interface Props {
  name: string;
  link: string;
  image?: string;
  span?: number;
}

const { name, link, image, span } = Astro.props
const linkBase = '/svelte-range-slider-pips/en/recipes/';

---

<li class="recipe" style=`grid-column: span ${span ?? 1};`>
  <a href={`${linkBase}${link}`}>
    {image &&
      <img src=`/svelte-range-slider-pips/recipes/${image}` alt={name} />
    }
    <h3>{name}</h3>
  </a>
</li>



<style>
  .recipe {
    box-sizing: border-box;
    margin: 0;
  }

  .recipe a {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    text-decoration: none;
    width: 100%;
    height: 100%;
    padding: 1rem;
    background: #fff;
    border: 1px solid #ddd;
    border-radius: 1em;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    transition: all 0.2s ease-in-out;
  }

  .recipe img {
    width: 100%;
    height: auto;
    border-radius: 0.5em;
  }

  .recipe h3 {
    margin: 0!important;
    padding: 0;
    font-size: 1.5rem;
    line-height: 1.2;
    text-align: center;
  }
</style>